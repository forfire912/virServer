{
  "system_id": "multi-node-system",
  "name": "Multi-Node Heterogeneous System",
  "description": "Example system with multiple processors communicating via shared memory",
  "nodes": [
    {
      "id": "node1",
      "backend": "qemu",
      "processor": {
        "type": "ARM Cortex-M4",
        "cores": 1,
        "frequency": 100000000
      },
      "memory": [
        {
          "type": "RAM",
          "address": 536870912,
          "size": 262144,
          "access": "RW"
        }
      ],
      "peripherals": [
        {
          "type": "UART",
          "name": "UART0",
          "address": 1073741824,
          "irq": [5]
        }
      ]
    },
    {
      "id": "node2",
      "backend": "renode",
      "processor": {
        "type": "RISC-V RV32",
        "cores": 1,
        "frequency": 50000000
      },
      "memory": [
        {
          "type": "RAM",
          "address": 2147483648,
          "size": 262144,
          "access": "RW"
        }
      ],
      "peripherals": [
        {
          "type": "UART",
          "name": "UART0",
          "address": 268435456,
          "irq": [10]
        }
      ]
    }
  ],
  "interconnect": {
    "shared_memory": [
      {
        "id": "shmem0",
        "address": 3221225472,
        "size": 65536,
        "nodes": ["node1", "node2"]
      }
    ],
    "irq_routes": [
      {
        "source_node": "node1",
        "source_irq": 16,
        "target_node": "node2",
        "target_irq": 16,
        "latency": 10
      }
    ]
  },
  "resources": {
    "cpu_cores": 2,
    "memory_mb": 1024,
    "timeout_sec": 7200
  }
}
